<h1>Life is too short for playing Sudoku</h1>  
<div id="flash">
  <%= flash[:notice] %>
</div>
  <form action="/reset" method="get">
    <button class="round">Start Over</button>
  </form>
  <form action="/easy" method="get">
    <button class="round">New Easy Game</button>
  </form>
    <form action="/hard" method="get">
      <button class="round">New Harder Game</button>
  </form>
<div id="sudoku">   
  <form action="/" method="post">    
    <% 3.times do |row| %>
      <div class='row'>
        <% 3.times do |box| %>
          <div class="box">
            <% 3.times do |cell_row| %>
              <div class="cell-row">
                <% 3.times do |cell| %>
                  <%= partial :cell, :locals => {:cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

  <button name="check">Check Solution</button>
  <button name="save">Save Progress</button>
  </form>
</div>